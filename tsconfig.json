{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@/public/*": [
                "./public/*"
            ]
        },
        "incremental": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es2015",
        "strict": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es6",
            "es5",
            "dom.iterable",
            "scripthost"
        ]
    }
}